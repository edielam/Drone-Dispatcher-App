import React, { useState, useEffect } from 'react';
import { makeStyles } from '@mui/styles';
import Table from '@material-ui/core/Table';
import TableBody from '@material-ui/core/TableBody';
import TableCell from '@material-ui/core/TableCell';
import TableHead from '@material-ui/core/TableHead';
import TableRow from '@material-ui/core/TableRow';

const useStyles = makeStyles({
  table: {
    minWidth: 650,
  },
});

const DispatchInfo = () => {
  const classes = useStyles();
  const [drones, setDrones] = useState([]);

  useEffect(() => {
    async function fetchDrones() {
      const res = await fetch('/api/drones');
      const data = await res.json();
      setDrones(data);
    }
    fetchDrones();
  }, []);

  return (
    <Table className={classes.table} aria-label="dispatch info">
      <TableHead>
        <TableRow>
          <TableCell>Serial Number</TableCell>
          <TableCell align="right">Model</TableCell>
          <TableCell align="right">State</TableCell>
          <TableCell align="right">Location</TableCell>
          <TableCell align="right">Expected Return Time</TableCell>
        </TableRow>
      </TableHead>
      <TableBody>
        {drones.map((drone) => (
          <TableRow key={drone.serialNumber}>
            <TableCell component="th" scope="row">
              {drone.serialNumber}
            </TableCell>
            <TableCell align="right">{drone.model}</TableCell>
            <TableCell align="right">{drone.state}</TableCell>
            <TableCell align="right">{drone.location}</TableCell>
            <TableCell align="right">{drone.expectedReturnTime}</TableCell>
          </TableRow>
        ))}
      </TableBody>
    </Table>
  );
};

export default DispatchInfo;
s